<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.kampung.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_home_req_details_Fragment"
            app:destination="@id/home_req_details" />

    </fragment>

    <fragment
        android:id="@+id/home_req_details"
        android:name="com.example.kampung.ui.home.HomeRequestDetails"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home_request_details">

        <action
            android:id="@+id/action_home_req_details_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>




    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.kampung.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.kampung.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>